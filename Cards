#Shuffling a Deck of Cards:

def createDeck(): #Creates a deck of 52 cards.
    deck = []
    for suit in ['♠','♥','♦','♣']:
        for card in [str(num) for num in range(2,10)] + ["T","J","Q","K","A"]:
            deck.append(card + suit)
    return deck

def shuffle_deck(): #Shuffles the deck of cards.
    deck = createDeck()
    choice = random.choice(deck)
    shuffled_cards = []
    while len(shuffled_cards) != 52:
        choice = random.choice(deck)
        shuffled_cards.append(choice)
        deck.remove(choice)
    return shuffled_cards

print(f"Before shuffling:{createDeck()}\n\n",end= "")
print(f"After shuffling:{shuffle_deck()}",end= "")

