#Exercise number 71: Approximate PI

num_approximations = int(input("Please enter the number of approximations of pi that you want: "))

def approximate_pi(num_approximations):
    approximations = [3]
    denominator_vals = [2,3,4]
    approximation = 1
    denominator = 0
    for x in range(1,num_approximations+1):
        print(f"Approximation # {approximation}: {sum(approximations)}")
        approximation +=1
        denominator = denominator_vals[0] * denominator_vals[1] * denominator_vals[2]
        if approximation % 2 == 0:
            approximations.append(4/denominator)
            denominator_vals = [denominator_vals[-1], (denominator_vals[-1] +1), (denominator_vals[-1] + 2)]
        elif approximation % 2 != 0:
            approximations.append(-4/denominator)
            denominator_vals = [denominator_vals[-1], (denominator_vals[-1] +1), (denominator_vals[-1] + 2)]

approximate_pi(num_approximations)
